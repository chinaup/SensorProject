<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">
    
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

      <android.support.v4.view.ViewPager
            android:id="@+id/main_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
       </android.support.v4.view.ViewPager>

	   <com.viewpagerindicator.LinePageIndicator
	        android:id="@+id/main_indicator"
	        android:layout_height="0dp"
	        android:layout_width="match_parent" />
	     
    </LinearLayout>
        
	<RadioGroup 
	    android:id="@+id/home_radio_button_group"
		android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:background="@color/bg_black"
        android:orientation="horizontal">
	    
	    <RadioButton 
	        android:id="@+id/menu_rdo_light"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:drawableTop="@drawable/selector_menu_light"
	        android:text="@string/menu_light"
	        android:background="@null"
            android:button="@null"
	        android:textColor="@drawable/selector_menu_light"
	        android:gravity="center_horizontal"/>
	    
	    <RadioButton 
	        android:id="@+id/menu_rdo_accelerometer"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:drawableTop="@drawable/selector_menu_accelerometer"
	        android:text="@string/menu_accelerometer"
	        android:background="@null"
            android:button="@null"
	        android:textColor="@drawable/selector_menu_accelerometer"
	        android:gravity="center_horizontal"/>
	    
	    <RadioButton 
	        android:id="@+id/menu_rdo_location"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:drawableTop="@drawable/selector_menu_location"
	        android:text="@string/menu_location"
	        android:background="@null"
            android:button="@null"
	        android:textColor="@drawable/selector_menu_location"
	        android:gravity="center_horizontal"/>
	   </RadioGroup>
    
</LinearLayout>